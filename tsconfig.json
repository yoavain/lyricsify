{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "typeRoots": [
            "./node_modules/@types",
            "./typings"
        ],
        "lib": [
            "dom",
            "dom.iterable",
            "esnext",
            "es2015",
            "es2016",
            "es2017"
        ],
        "jsx": "react",
        "sourceMap": true,
        "outDir": "./dist",
        "baseUrl": ".",
        "noEmit": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "importsNotUsedAsValues": "error",
        "paths": {
            "~src/*": ["src/*"],
            "~components/*": ["src/components/*"],
            "~resources/*": ["resources/*"]
        }
    },
    "include": [
        "webpack.*.ts",
        "jest.config.ts",
        "./scripts",
        "./src",
        "./test"
    ],
    "exclude": [
        "node_modules"
    ]
}
