{
    "name": "lyricsify",
    "version": "0.0.1",
    "description": "Batch download lyrics and embed in audio files",
    "main": "./dist/main.js",
    "scripts": {
        "build-main": "cross-env NODE_ENV=production webpack --config webpack.main.prod.config.js",
        "build-renderer": "cross-env NODE_ENV=production webpack --config webpack.renderer.prod.config.js",
        "build": "npm run build-main && npm run build-renderer",
        "start-renderer-dev": "webpack --watch --config webpack.renderer.dev.config.js",
        "start-main-dev": "webpack --config webpack.main.config.js && electron ./dist/main.js",
        "start-dev": "concurrently \"npm run start-renderer-dev\" \"npm run start-main-dev\"",
        "prestart": "npm run build",
        "start": "electron .",
        "lint": "tslint '{src,test,mocks}/**/*.{ts,tsx}' --project ./tsconfig.json",
        "test": "jest '(\\/test\\/(?!e2e/)).*'",
        "pretest:e2e": "npm run build",
        "test:e2e": "jest '(\\/test\\/e2e/).*'",
        "pack": "npm run build && electron-builder --dir",
        "dist": "npm run build && electron-builder",
        "postinstall": "electron-builder install-app-deps"
    },
    "keywords": [
        "Electron",
        "Lyrics",
        "ID3Tag",
        "MP3",
        "FLAC"
    ],
    "author": "yoavain",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/yoavain/lyricsify/issues"
    },
    "homepage": "https://github.com/yoavain/lyricsify",
    "dependencies": {
        "@material-ui/core": "4.7.2",
        "deep-diff": "1.0.2",
        "moment": "2.24.0",
        "node-id3": "0.1.13",
        "numeral": "2.0.6",
        "react": "16.12.0",
        "react-dom": "16.12.0"
    },
    "devDependencies": {
        "@babel/core": "7.7.5",
        "@babel/plugin-proposal-class-properties": "7.7.4",
        "@babel/polyfill": "7.7.0",
        "@babel/preset-env": "7.7.6",
        "@babel/preset-react": "7.7.4",
        "@babel/preset-typescript": "7.7.4",
        "@hot-loader/react-dom": "16.11.0",
        "@types/jest": "24.0.23",
        "@types/node": "12.12.17",
        "@types/numeral": "0.0.26",
        "@types/react": "16.9.16",
        "@types/react-dom": "16.9.4",
        "@types/react-hot-loader": "4.1.1",
        "@types/react-test-renderer": "16.9.1",
        "@types/webdriverio": "4.13.3",
        "@types/webpack-env": "1.14.1",
        "babel-loader": "8.0.6",
        "concurrently": "5.0.1",
        "cross-env": "6.0.3",
        "css-loader": "3.3.0",
        "electron": "7.1.4",
        "electron-builder": "21.2.0",
        "file-loader": "3.0.1",
        "fork-ts-checker-webpack-plugin": "3.1.1",
        "html-webpack-plugin": "3.2.0",
        "husky": "3.1.0",
        "image-webpack-loader": "6.0.0",
        "jest": "24.9.0",
        "lint-staged": "9.5.0",
        "node-sass": "4.13.0",
        "prettier": "1.19.1",
        "react-hot-loader": "4.12.18",
        "react-test-renderer": "16.12.0",
        "sass-loader": "8.0.0",
        "source-map-loader": "0.2.4",
        "spectron": "9.0.0",
        "style-loader": "1.0.1",
        "ts-jest": "24.2.0",
        "ts-node": "8.5.4",
        "tslint": "5.20.1",
        "tslint-config-airbnb": "5.11.2",
        "tslint-config-prettier": "1.18.0",
        "tslint-react": "4.1.0",
        "typescript": "3.7.3",
        "webpack": "4.41.2",
        "webpack-cli": "3.3.10",
        "webpack-merge": "4.2.2"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged || exit 0"
        }
    },
    "lint-staged": {
        "{src,test,mocks}/**/*.{js,ts,tsx,json,css,scss,md}": [
            "prettier --config ./.prettierrc --write",
            "git add"
        ],
        "{src,test,mocks}/**/*.{js,ts,tsx}": [
            "tslint --project ./tsconfig.json --fix",
            "git add"
        ]
    },
    "jest": {
        "transform": {
            "^.+\\.tsx?$": "ts-jest"
        },
        "testRegex": "(/test/.+\\.spec)\\.tsx?$",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "json",
            "node"
        ],
        "moduleNameMapper": {
            "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/mocks/fileMock.js",
            "\\.(s?css|sass)$": "<rootDir>/mocks/styleMock.js"
        }
    },
    "build": {
        "productName": "Lyricsify",
        "appId": "yoavain",
        "mac": {
            "category": "music"
        },
        "directories": {
            "output": "release"
        },
        "files": [
            "dist/",
            "node_modules/",
            "package.json"
        ],
        "linux": {
            "target": "deb"
        },
        "win": {
            "target": "nsis"
        }
    }
}
