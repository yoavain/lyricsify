{
    "name": "lyricsify",
    "version": "0.5.0",
    "description": "Batch download lyrics and embed in audio files",
    "main": "src/electron/index.ts",
    "scripts": {
        "start": "node scripts/start.ts",
        "electron": "electron .",
        "build": "node scripts/build.ts",
        "eslint": "eslint src/ test/",
        "eslint:fix": "npm run eslint -- --fix",
        "type-check": "tsc --build tsconfig.json",
        "jest": "cross-env TEST_MODE=true jest test/",
        "test": "npm run eslint && npm run type-check && npm run jest",
        "huskypostinstall": "git config --get core.hookspath || husky install",
        "postinstall": "npm run huskypostinstall",
        "db": "ts-node src/renderer/services/db/client.ts",
        "db-init": "knex migrate:down && knex migrate:latest",
        "lint-staged": "lint-staged || exit 0"
    },
    "keywords": [
        "Electron",
        "Lyrics",
        "ID3Tag",
        "MP3",
        "FLAC"
    ],
    "author": "yoavain",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/yoavain/lyricsify/issues"
    },
    "homepage": "https://github.com/yoavain/lyricsify",
    "engines": {
        "node": ">=12 <17",
        "npm": "<7"
    },
    "dependencies": {
        "@material-ui/core": "4.12.3",
        "@material-ui/icons": "4.11.2",
        "knex": "0.95.15",
        "metaflac-js": "1.0.5",
        "music-metadata": "7.11.8",
        "node-id3": "0.2.3",
        "react": "17.0.2",
        "react-dom": "17.0.2",
        "react-hot-loader": "4.13.0",
        "react-player": "2.9.0",
        "sqlite3": "5.0.2"
    },
    "devDependencies": {
        "@testing-library/dom": "8.11.3",
        "@testing-library/jest-dom": "5.16.2",
        "@testing-library/react": "12.1.2",
        "@testing-library/user-event": "13.5.0",
        "@types/jest": "27.4.0",
        "@typescript-eslint/eslint-plugin": "5.11.0",
        "@typescript-eslint/parser": "5.11.0",
        "cross-env": "7.0.3",
        "electron": "17.0.0",
        "electron-packager": "15.4.0",
        "electron-reloader": "1.2.2",
        "electron-winstaller": "5.0.0",
        "eslint": "8.8.0",
        "eslint-plugin-import": "2.25.4",
        "eslint-plugin-jest": "26.1.0",
        "eslint-plugin-node": "11.1.0",
        "eslint-plugin-react": "7.28.0",
        "eslint-plugin-security": "1.4.0",
        "husky": "7.0.4",
        "jest": "27.5.1",
        "lint-staged": "12.3.3",
        "parcel-bundler": "1.12.5",
        "sass": "1.49.7",
        "ts-jest": "27.1.3",
        "ts-node": "10.5.0",
        "typescript": "4.5.5"
    },
    "lint-staged": {
        "{src,test,mocks}/**/*.{json,css,scss,md}": [
            "prettier --config ./.prettierrc --write"
        ],
        "{src,test,mocks}/**/*.{js,ts,tsx}": [
            "eslint --fix"
        ]
    }
}
