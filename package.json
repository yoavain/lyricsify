{
    "name": "lyricsify",
    "version": "0.1.0",
    "description": "Batch download lyrics and embed in audio files",
    "main": "./dist/main.js",
    "scripts": {
        "build-main": "cross-env NODE_ENV=production webpack --config webpack.main.prod.config.js",
        "build-renderer": "cross-env NODE_ENV=production webpack --config webpack.renderer.prod.config.js",
        "build": "npm run test && npm run build-main && npm run build-renderer",
        "start-renderer-dev": "webpack --watch --config webpack.renderer.dev.config.js",
        "start-main-dev": "webpack --config webpack.main.config.js && electron ./dist/main.js",
        "start-dev": "concurrently \"npm run start-renderer-dev\" \"npm run start-main-dev\"",
        "prestart": "npm run build",
        "start": "electron .",
        "eslint": "eslint src/ test/",
        "eslint:fix": "npm run eslint -- --fix",
        "test": "cross-env TEST_MODE=true jest --coverage test/(?!(e2e)).*",
        "pretest:e2e": "npm run build",
        "test:e2e": "jest --coverage test/e2e",
        "pack": "npm run build && electron-builder --dir",
        "dist": "npm run build && electron-builder",
        "postinstall": "electron-builder install-app-deps",
        "db": "ts-node src/renderer/services/db/client.ts",
        "db-init": "knex migrate:down && knex migrate:latest"
    },
    "keywords": [
        "Electron",
        "Lyrics",
        "ID3Tag",
        "MP3",
        "FLAC"
    ],
    "author": "yoavain",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/yoavain/lyricsify/issues"
    },
    "homepage": "https://github.com/yoavain/lyricsify",
    "engines": {
        "node": ">=12.0.0"
    },
    "dependencies": {
        "@babel/runtime": "7.11.2",
        "@material-ui/core": "4.11.0",
        "@material-ui/icons": "4.9.1",
        "deep-diff": "1.0.2",
        "got": "11.6.0",
        "knex": "0.21.5",
        "moment": "2.27.0",
        "music-metadata": "7.0.2",
        "node-id3": "0.1.18",
        "numeral": "2.0.6",
        "p-limit": "3.0.2",
        "react": "16.13.1",
        "react-dom": "16.13.1",
        "react-player": "2.6.1",
        "sqlite3": "5.0.0"
    },
    "devDependencies": {
        "@hot-loader/react-dom": "16.13.0",
        "@testing-library/dom": "7.24.1",
        "@testing-library/jest-dom": "5.11.4",
        "@testing-library/react": "11.0.2",
        "@types/deep-diff": "1.0.0",
        "@types/jest": "26.0.13",
        "@types/node": "14.6.4",
        "@types/numeral": "0.0.28",
        "@types/react": "16.9.49",
        "@types/react-dom": "16.9.8",
        "@types/react-hot-loader": "4.1.1",
        "@types/react-test-renderer": "16.9.3",
        "@types/webpack-env": "1.15.2",
        "@typescript-eslint/eslint-plugin": "4.0.1",
        "@typescript-eslint/parser": "4.0.1",
        "concurrently": "5.3.0",
        "copy-webpack-plugin": "6.1.0",
        "cross-env": "7.0.2",
        "css-loader": "4.2.2",
        "electron": "10.1.1",
        "electron-builder": "22.8.0",
        "electron-react-devtools": "0.5.3",
        "eslint": "7.8.1",
        "eslint-plugin-import": "2.22.0",
        "eslint-plugin-jest": "23.20.0",
        "eslint-plugin-node": "11.1.0",
        "eslint-plugin-react": "7.20.6",
        "eslint-plugin-security": "1.4.0",
        "file-loader": "6.1.0",
        "html-webpack-plugin": "4.4.1",
        "husky": "4.2.5",
        "jest": "26.4.2",
        "lint-staged": "10.3.0",
        "node-loader": "1.0.1",
        "node-sass": "4.14.1",
        "prettier": "2.1.1",
        "react-hot-loader": "4.12.21",
        "sass-loader": "10.0.2",
        "source-map-loader": "1.1.0",
        "spectron": "11.1.0",
        "style-loader": "1.2.1",
        "ts-jest": "26.3.0",
        "ts-loader": "8.0.3",
        "ts-node": "9.0.0",
        "typescript": "4.0.2",
        "webpack": "4.44.1",
        "webpack-cli": "3.3.12",
        "webpack-merge": "5.1.3"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged || exit 0"
        }
    },
    "lint-staged": {
        "{src,test,mocks}/**/*.{json,css,scss,md}": [
            "prettier --config ./.prettierrc --write"
        ],
        "{src,test,mocks}/**/*.{js,ts,tsx}": [
            "eslint --fix"
        ]
    },
    "jest": {
        "transform": {
            "^.+\\.tsx?$": "ts-jest"
        },
        "testRegex": "(/test/.+\\.test)\\.tsx?$",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "json",
            "node"
        ],
        "moduleNameMapper": {
            "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/mocks/fileMock.js",
            "\\.(s?css|sass)$": "<rootDir>/mocks/styleMock.js"
        }
    },
    "build": {
        "productName": "Lyricsify",
        "appId": "yoavain",
        "mac": {
            "category": "music"
        },
        "directories": {
            "output": "release"
        },
        "files": [
            "dist/",
            "node_modules/",
            "package.json"
        ],
        "linux": {
            "target": "deb"
        },
        "win": {
            "target": "nsis"
        }
    }
}
