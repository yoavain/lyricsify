{
    "name": "lyricsify",
    "version": "0.2.2",
    "description": "Batch download lyrics and embed in audio files",
    "main": "./dist/main.js",
    "scripts": {
        "build-main": "cross-env NODE_ENV=production webpack --config webpack.main.prod.config.ts",
        "build-renderer": "cross-env NODE_ENV=production webpack --config webpack.renderer.prod.config.ts",
        "build": "npm run test && npm run build-main && npm run build-renderer",
        "start-renderer-dev": "webpack --watch --config webpack.renderer.dev.config.ts",
        "start-main-dev": "webpack --config webpack.main.config.ts && electron ./dist/main.js",
        "start-dev": "concurrently \"npm run start-renderer-dev\" \"npm run start-main-dev\"",
        "prestart": "npm run build",
        "start": "electron .",
        "eslint": "eslint src/ test/",
        "eslint:fix": "npm run eslint -- --fix",
        "test": "cross-env TEST_MODE=true jest test/(?!(e2e)).*",
        "pretest:e2e": "npm run build",
        "test:e2e": "jest test/e2e",
        "pack": "npm run build && electron-builder --dir",
        "dist": "npm run build && electron-builder",
        "postinstall": "electron-builder install-app-deps",
        "db": "ts-node src/renderer/services/db/client.ts",
        "db-init": "knex migrate:down && knex migrate:latest"
    },
    "keywords": [
        "Electron",
        "Lyrics",
        "ID3Tag",
        "MP3",
        "FLAC"
    ],
    "author": "yoavain",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/yoavain/lyricsify/issues"
    },
    "homepage": "https://github.com/yoavain/lyricsify",
    "engines": {
        "node": ">=12 <15",
        "npm": "<7"
    },
    "dependencies": {
        "@babel/runtime": "7.12.13",
        "@material-ui/core": "4.11.3",
        "@material-ui/icons": "4.11.2",
        "got": "11.8.1",
        "knex": "0.21.17",
        "metaflac-js": "1.0.5",
        "moment": "2.29.1",
        "music-metadata": "7.6.6",
        "node-id3": "0.2.2",
        "numeral": "2.0.6",
        "p-limit": "3.1.0",
        "react": "17.0.1",
        "react-dom": "17.0.1",
        "react-player": "2.8.2",
        "sqlite3": "5.0.1"
    },
    "devDependencies": {
        "@hot-loader/react-dom": "17.0.1",
        "@testing-library/dom": "7.29.4",
        "@testing-library/jest-dom": "5.11.9",
        "@testing-library/react": "11.2.5",
        "@testing-library/user-event": "12.6.3",
        "@types/jest": "26.0.20",
        "@types/node": "14.14.22",
        "@types/numeral": "2.0.0",
        "@types/react": "17.0.1",
        "@types/react-dom": "17.0.0",
        "@types/react-test-renderer": "17.0.0",
        "@types/webpack-env": "1.16.0",
        "@typescript-eslint/eslint-plugin": "4.14.2",
        "@typescript-eslint/parser": "4.14.2",
        "concurrently": "5.3.0",
        "copy-webpack-plugin": "7.0.0",
        "cross-env": "7.0.3",
        "css-loader": "5.0.1",
        "electron": "11.2.2",
        "electron-builder": "22.9.1",
        "electron-react-devtools": "0.5.3",
        "eslint": "7.19.0",
        "eslint-plugin-import": "2.22.1",
        "eslint-plugin-jest": "24.1.3",
        "eslint-plugin-node": "11.1.0",
        "eslint-plugin-react": "7.22.0",
        "eslint-plugin-security": "1.4.0",
        "file-loader": "6.2.0",
        "html-webpack-plugin": "4.5.1",
        "husky": "4.3.8",
        "jest": "26.6.3",
        "lint-staged": "10.5.3",
        "node-loader": "1.0.2",
        "node-sass": "5.0.0",
        "prettier": "2.2.1",
        "react-hot-loader": "4.13.0",
        "sass-loader": "10.1.1",
        "spectron": "13.0.0",
        "style-loader": "2.0.0",
        "ts-jest": "26.5.0",
        "ts-loader": "8.0.14",
        "ts-node": "9.1.1",
        "typescript": "4.1.3",
        "webpack": "5.20.1",
        "webpack-cli": "4.5.0",
        "webpack-merge": "5.7.3"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged || exit 0"
        }
    },
    "lint-staged": {
        "{src,test,mocks}/**/*.{json,css,scss,md}": [
            "prettier --config ./.prettierrc --write"
        ],
        "{src,test,mocks}/**/*.{js,ts,tsx}": [
            "eslint --fix"
        ]
    },
    "build": {
        "productName": "Lyricsify",
        "appId": "yoavain",
        "mac": {
            "category": "music"
        },
        "directories": {
            "output": "release"
        },
        "files": [
            "dist/",
            "node_modules/",
            "package.json"
        ],
        "linux": {
            "target": "deb"
        },
        "win": {
            "target": "nsis"
        }
    }
}
