{
    "name": "lyricsify",
    "version": "0.0.1",
    "description": "Batch download lyrics and embed in audio files",
    "main": "./dist/main.js",
    "scripts": {
        "build-main": "cross-env NODE_ENV=production webpack --config webpack.main.prod.config.js",
        "build-renderer": "cross-env NODE_ENV=production webpack --config webpack.renderer.prod.config.js",
        "build": "npm run test && npm run build-main && npm run build-renderer",
        "start-renderer-dev": "webpack --watch --config webpack.renderer.dev.config.js",
        "start-main-dev": "webpack --config webpack.main.config.js && electron ./dist/main.js",
        "start-dev": "concurrently \"npm run start-renderer-dev\" \"npm run start-main-dev\"",
        "prestart": "npm run build",
        "start": "electron .",
        "eslint": "eslint src/ test/ --ext .ts,.tsx,.js",
        "eslint:fix": "npm run eslint -- --fix",
        "test": "jest --coverage '(\\/test\\/(?!e2e/)).*'",
        "pretest:e2e": "npm run build",
        "test:e2e": "jest '(\\/test\\/e2e/).*'",
        "pack": "npm run build && electron-builder --dir",
        "dist": "npm run build && electron-builder",
        "postinstall": "electron-builder install-app-deps"
    },
    "keywords": [
        "Electron",
        "Lyrics",
        "ID3Tag",
        "MP3",
        "FLAC"
    ],
    "author": "yoavain",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/yoavain/lyricsify/issues"
    },
    "homepage": "https://github.com/yoavain/lyricsify",
    "engines": {
        "node": ">=12.0.0"
    },
    "dependencies": {
        "@material-ui/core": "4.9.9",
        "deep-diff": "1.0.2",
        "moment": "2.24.0",
        "music-metadata": "6.3.7",
        "node-id3": "0.1.16",
        "numeral": "2.0.6",
        "react": "16.13.1",
        "react-dom": "16.13.1",
        "react-player": "1.15.3"
    },
    "devDependencies": {
        "@babel/core": "7.9.0",
        "@babel/plugin-proposal-class-properties": "7.8.3",
        "@babel/polyfill": "7.8.7",
        "@babel/preset-env": "7.9.0",
        "@babel/preset-react": "7.9.4",
        "@babel/preset-typescript": "7.9.0",
        "@hot-loader/react-dom": "16.13.0",
        "@testing-library/dom": "7.2.0",
        "@testing-library/jest-dom": "5.3.0",
        "@testing-library/react": "10.0.2",
        "@types/deep-diff": "1.0.0",
        "@types/jest": "25.2.1",
        "@types/node": "13.11.0",
        "@types/numeral": "0.0.26",
        "@types/react": "16.9.32",
        "@types/react-dom": "16.9.6",
        "@types/react-hot-loader": "4.1.1",
        "@types/react-test-renderer": "16.9.2",
        "@types/webdriverio": "4.13.3",
        "@types/webpack-env": "1.15.1",
        "@typescript-eslint/eslint-plugin": "2.27.0",
        "@typescript-eslint/parser": "2.26.0",
        "babel-loader": "8.1.0",
        "concurrently": "5.1.0",
        "cross-env": "7.0.2",
        "css-loader": "3.4.2",
        "electron": "8.2.0",
        "electron-builder": "22.4.1",
        "eslint": "6.8.0",
        "eslint-plugin-import": "2.20.2",
        "eslint-plugin-jest": "23.8.2",
        "eslint-plugin-node": "11.1.0",
        "eslint-plugin-react": "7.19.0",
        "file-loader": "6.0.0",
        "fork-ts-checker-webpack-plugin": "4.1.2",
        "html-webpack-plugin": "4.0.4",
        "husky": "4.2.3",
        "jest": "25.2.7",
        "lint-staged": "10.1.1",
        "node-sass": "4.13.1",
        "prettier": "2.0.4",
        "react-hot-loader": "4.12.20",
        "sass-loader": "8.0.2",
        "source-map-loader": "0.2.4",
        "spectron": "10.0.1",
        "style-loader": "1.1.3",
        "ts-jest": "25.3.1",
        "ts-node": "8.8.1",
        "typescript": "3.8.3",
        "webpack": "4.42.1",
        "webpack-cli": "3.3.11",
        "webpack-merge": "4.2.2"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged || exit 0"
        }
    },
    "lint-staged": {
        "{src,test,mocks}/**/*.{json,css,scss,md}": [
            "prettier --config ./.prettierrc --write"
        ],
        "{src,test,mocks}/**/*.{js,ts,tsx}": [
            "eslint --fix"
        ]
    },
    "jest": {
        "transform": {
            "^.+\\.tsx?$": "ts-jest"
        },
        "testRegex": "(/test/.+\\.test)\\.tsx?$",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "json",
            "node"
        ],
        "moduleNameMapper": {
            "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/mocks/fileMock.js",
            "\\.(s?css|sass)$": "<rootDir>/mocks/styleMock.js"
        }
    },
    "build": {
        "productName": "Lyricsify",
        "appId": "yoavain",
        "mac": {
            "category": "music"
        },
        "directories": {
            "output": "release"
        },
        "files": [
            "dist/",
            "node_modules/",
            "package.json"
        ],
        "linux": {
            "target": "deb"
        },
        "win": {
            "target": "nsis"
        }
    }
}
