{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "typeRoots": [
      "./node_modules/@types",
      "./typings"
    ],
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
      "es2015",
      "es2016",
      "es2017"
    ], 
    "jsx": "react",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "noEmit": true,
    "paths": {
      "~root/*": ["*"],
      "~src/*": ["src/*"],
      "~components/*": ["src/renderer/components/*"],
      "~resources/*": ["resources/*"],
      "*": ["node_modules/*"]
    },

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "importsNotUsedAsValues": "error"
  },
  "include": [
    "./src",
    "./test",
    "./mocks"
  ],
  "exclude": [
    "node_modules"
  ]
}